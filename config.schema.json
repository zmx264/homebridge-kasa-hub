{
  "pluginAlias": "KasaHub",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "email": {
        "title": "Email",
        "type": "string",
        "required": true,
        "description": "TPLink Tapo / Kasa account email."
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "description": "TPLink Tapo / Kasa account password"
      },
      "refresh_interval": {
        "title": "Refresh",
        "type": "integer",
        "required": true,
        "minimum": 10,
        "default": 60,
        "description": "Refresh interval (seconds)"
      },
      "devices": {
        "title": "Devices",
        "required": true,
        "uniqueItems": true,
        "type": "array",
        "description": "The IP addresses and the names for your TPLink Tapo / Kasa Devices",
        "add": "Add",
        "items": {
          "title": "IP",
          "type": "string",
          "required": true,
          "format": "ipv4",
          "minLength": 1
        }
      }
    }
  }
}